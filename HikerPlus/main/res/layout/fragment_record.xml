<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPostBackground5"
    tools:context="hangxu.finalproject.cs5520.hikerplus.fragment.RecordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recordUserProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile_img1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/recordUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/display_name"
            android:textAllCaps="true"
            android:textColor="@color/colorButtonText"
            android:textSize="30sp"
            android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/startHikingButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bt_shape_start_hiking"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:text="@string/startHiking1"
            android:textColor="@color/colorSettingText"
            android:fontFamily="casual"
            android:textSize="19dp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/record_list_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
