<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/message_row"
    android:background="@drawable/message_layout_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_img1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:id="@+id/message_container"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/message_profile">

            <TextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="@string/profile_default_status"
                android:textColor="@color/colorPostBackground5"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/message_sender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:background="@drawable/bt_shape_round_corner"
                android:fontFamily="casual"
                android:text="Display wrote..."
                android:textColor="@color/colorCursor2"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/senderImageViewRight"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom = "10dp"
            android:src="@drawable/profile_img1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>

</LinearLayout>